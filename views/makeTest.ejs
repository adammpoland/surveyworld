  <body>

      <ul>
        <li><a class="active" href="/">Home </a></li>
        <li><a href="/makeTest">Make a Survey</a></li>
        <li><a href="/mySurveys">My Surveys</a></li>
        <li><a href="/finishedSurveys">Finished Surveys</a></li>
      </ul>

      <br>
      <% let j=1 %>
      <div class="container">
          <h1 class="title">Make a Survey</h1>    
          <form action="/newTest" method="POST" id="quizForm">


            
              <div class="input-field col s12" >
                <input id="name" name="name" type="text" class="validate" >
                <label for="name">Name</label>
              </div>

              <div class="input-field col s12" >
                <input id="description" name="description" type="text" class="validate" >
                <label for="description">Description</label>
              </div>

            
        
            <div class="input-field col s12 black-text text-darken-2">
               <select class="" id="select" form="quizForm" name="categorie">
                  <option value = "" disabled selected>Select Categorie</option>
                  <option value = "politics">Politics</option>
                  <option value = "religion">Religion</option>
                  <option value = "entertainment">Entertainment</option>

                  <option value = "psychology">Psychology</option>
                  <option value = "economics">Economics</option>
                  <option value = "culture">Culture</option>
                  <option value = "environment">The Environment</option>
                  <option value = "environment">The Environment</option>
               </select>    
               <label for="select">Categorie</label>
           
            </div>
    


            <span id="responce"></span>
            <input type="button" value="Add a Question" class="btn" onclick="addInput()"/>


            <br>
            <script>
            var countBox =1;
            
            var boxName = 0;
            function addInput()
            {
              if(countBox<=10){
                var boxName="textBox"+countBox; 
                document.getElementById('responce').innerHTML+='<br/>Question '+countBox+': <input type="text" id="'+boxName+'" name="'+boxName+'" "  /><br/>';
               var count = document.getElementById('count').value=countBox;     
                console.log(countBox);
                countBox += 1;
                count.value=countBox;
              }
                
            }
            </script>

            <input type="hidden" name="numOfQuestions" id="count">
            <input type="hidden" name="createdBy" value="<%=email%>">


            <br>
            <input type="submit" class="btn" value="Submit"> 
          </form>
        

      </div>
      

      <script>

      </script>
  </body>
</html>